<Window
    x:Class="LabelDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LabelDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <!--  Labels are heavier than TextBlocks if given chose TextBlocks  -->
    <StackPanel Margin="10,10,10,20">
        <Label Content="1. This is a Label Control" />
        <Label
            Content="2. A Lable control with text formatting"
            FontStyle="Italic"
            FontWeight="Bold"
            Foreground="Red" />
        <Label>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="3. A rectangle" />
                <Rectangle
                    Width="20"
                    Height="20"
                    Margin="10,0"
                    Fill="Red" />
                <TextBlock Text="inside a label control" />
            </StackPanel>
        </Label>
    </StackPanel>
</Window>
