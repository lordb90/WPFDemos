<Window
    x:Class="Ch02.LabelAccessKeyDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Ch02.LabelAccessKeyDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel Margin="10,10,10,20">
        <Label Content="Enter _Username:" Target="{Binding ElementName=txbUsername}" />
        <TextBox x:Name="txbUsername" Margin="6,0" />

        <Label Content="Enter _Password:" Target="{Binding ElementName=txbPassword}" />
        <TextBox x:Name="txbPassword" Margin="6,0" />
    </StackPanel>
</Window>
